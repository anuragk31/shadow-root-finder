{
    "manifest_version": 3,
    "name": "Shadow Root Finder",
    "version": "1.0",
    "description": "Highlight all shadow host or shadow root",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "action": {
        "default_icon": "images/popup.png",
        "default_title": "Stylize!",
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"]
        }
      ]
}